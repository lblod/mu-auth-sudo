{
  "$schema": "https://json.schemastore.org/tsconfig",
  "display": "Node 22",

  "compilerOptions": {
    "lib": ["es2022"],
    "module": "commonjs",
    "target": "es2022",
    "strict": true,
    "declaration": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "outDir":"./dist"
  },
  "include": ["src"],
  "exclude": ["node_modules"]
}
